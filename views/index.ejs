    </canvas>
  </div>
</article>
  <form action="/" method="post">
    <input type="text" name="name">
    <input type="text" name="score">
    <input type="submit" name="Submit">
  </form>
    <%= scores.forEach(function(score){
      score.name + score.score
    }); %>

    
